<ContentPage
    x:Class="Calculator.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Calculator.CustomControls"
    xmlns:effects="clr-namespace:Calculator">

    <Grid Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:CustomEditor
            x:Name="inputEditor"
            Grid.ColumnSpan="4"
            FontSize="35"
            Text="0" />
        <controls:CustomEditor
            x:Name="resultEditor"
            Grid.Row="1"
            Grid.ColumnSpan="4"
            FontSize="55" />
        <Button
            Grid.Row="2"
            Grid.Column="0"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="(" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Clicked="onSymbolButtonClicked"
            FontSize="26"
            Text=")" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Clicked="onBackspaceButtonClicked"
            FontSize="26"
            Text="⌫" />
        <Button
            x:Name="multiplyButton"
            Grid.Row="2"
            Grid.Column="3"
            BackgroundColor="#48F082"
            Clicked="onSymbolButtonClicked"
            FontSize="30"
            Text="*"
            TextColor="white" />
        <Button
            x:Name="divideButton"
            Grid.Row="3"
            Grid.Column="3"
            BackgroundColor="#48F082"
            Clicked="onSymbolButtonClicked"
            FontSize="30"
            Text="/"
            TextColor="white" />
        <Button
            Grid.Row="3"
            Grid.Column="0"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="7" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="8" />

        <Button
            Grid.Row="3"
            Grid.Column="2"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="9" />

        <Button
            Grid.Row="4"
            Grid.Column="0"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="4" />
        <Button
            x:Name="plusButton"
            Grid.Row="4"
            Grid.Column="3"
            BackgroundColor="#48F082"
            Clicked="onSymbolButtonClicked"
            FontSize="30"
            Text="+"
            TextColor="white" />

        <Button
            Grid.Row="4"
            Grid.Column="1"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="5" />
        <Button
            Grid.Row="4"
            Grid.Column="2"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="6" />
        <Button
            Grid.Row="5"
            Grid.Column="0"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="1" />
        <Button
            Grid.Row="5"
            Grid.Column="1"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="2" />
        <Button
            Grid.Row="5"
            Grid.Column="2"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="3" />
        <Button
            x:Name="minusButton"
            Grid.Row="5"
            Grid.Column="3"
            BackgroundColor="#48F082"
            Clicked="onSymbolButtonClicked"
            FontSize="30"
            Text="-"
            TextColor="white" />
        <Button
            Grid.Row="6"
            Grid.Column="0"
            Clicked="onNumberButtonClicked"
            FontSize="26"
            Text="0" />
        <Button
            Grid.Row="6"
            Grid.Column="1"
            Clicked="onSymbolButtonClicked"
            FontSize="26"
            Text="," />
        <Button
            Grid.Row="6"
            Grid.Column="2"
            Clicked="onClearButtonClicked"
            FontSize="26"
            Text="C" />
        <Button
            x:Name="equalsButton"
            Grid.Row="6"
            Grid.Column="3"
            BackgroundColor="#48F082"
            Clicked="onResultButtonClicked"
            FontSize="30"
            Text="="
            TextColor="white" />
    </Grid>

</ContentPage>
